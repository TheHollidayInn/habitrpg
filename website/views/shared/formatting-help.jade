small.btn-link(ng-init='showHelp = false', ng-click='showHelp = !showHelp')
  | {{showHelp ? env.t('hideFormattingHelp') : env.t('showFormattingHelp')}}

.slight-vertical-padding(ng-if='showHelp')
  table.table.table-striped
    tr.info
      td.col-xs-6 #[b=env.t('youType')]
      td.col-xs-6 #[b=env.t('youSee')]
    tr
      td=env.t('italics')
      td #[markdown(text="env.t('italics')")]
    tr
      td=env.t('bold')
      td #[markdown(text="env.t('bold')")]
    tr
      td=env.t('strikethrough')
      td #[markdown(text="env.t('strikethrough')")]
    tr
      td=env.t('emojiExample')
      td #[markdown(text="env.t('emojiExample')")]
    tr
      // @TODO: add config
      //- td=env.t('markdownLinkEx')
      //- td #[markdown(text="env.t('markdownLinkEx')")]
      td [ComEd is great!](https://comed.habitica.com)
      td #[markdown(text="env.t('comedMarkdownLinkEx')")]
    tr
      //- td=env.t('markdownImageEx')
      //- td #[markdown(text="env.t('markdownImageEx')")]
      td ![mandatory alt text](https://s3.amazonaws.com/habitica-assets/assets/enterprise/ComEd/Powering%2BUp%2BJD%2BLockup_game%2Bfile.png)
      td #[markdown(text="env.t('comedMarkdownImageLinkEx')")]
      
    tr
      td!=env.t('unorderedListHTML')
      td #[markdown(text="env.t('unorderedListMarkdown')")]
    tr
      td=env.t('code')
      td #[markdown(text="env.t('code')")]

  hr
  // TODO: Add config comedMarkdownBlurb
  p.text-center.muted!=env.t('comedMarkdownBlurb')
  hr
